<AnchorPane prefHeight="506.0" prefWidth="669.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ProductCategoryController">
   <children>
      <Label layoutX="183.0" layoutY="40.0" text="Product Category CRUD">
