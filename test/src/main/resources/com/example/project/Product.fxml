<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="690.0" prefWidth="756.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ProductController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product CRUD ">
      <font>
         <Font size="21.0" />
      </font>
   </Text>
   <VBox prefHeight="285.0" prefWidth="716.0" spacing="2.0">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name:" textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productname" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity : " textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productquantity" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Size : " textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productsize" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price:" textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productprice" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description:" textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productdescription" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Disponibility : " textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productdisponibility" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image: " textAlignment="RIGHT">
            <font>
               <Font size="15.0" />
            </font>
         </Text>
         <TextField fx:id="productimage" />
      </children>
   </VBox>
   <ButtonBar prefHeight="50.0" prefWidth="655.0">
     <buttons>
       <Button fx:id="addbutton" mnemonicParsing="false" onAction="#addbutton" prefHeight="48.0" prefWidth="453.0" text="Add" textFill="#119c34">
            <font>
               <Font size="22.0" />
            </font>
         </Button>
         <Button fx:id="updatebutton" layoutX="651.0" layoutY="10.0" mnemonicParsing="false" onAction="#updatebutton" prefHeight="46.0" text="Update" textAlignment="CENTER" textFill="#0d1dd4">
            <font>
               <Font size="22.0" />
            </font>
         </Button>
         <Button fx:id="deletebutton" layoutX="565.0" layoutY="10.0" mnemonicParsing="false" onAction="#deletebutton" prefHeight="50.0" text="Delete" textFill="#ea0e0e">
            <font>
               <Font size="23.0" />
            </font>
         </Button>
     </buttons>
   </ButtonBar>
   <TableView fx:id="table" editable="true" prefHeight="210.0" prefWidth="716.0">
     <columns>
       <TableColumn fx:id="product_id" prefWidth="75.0" text="ID" />
       <TableColumn fx:id="product_name" prefWidth="86.39998626708984" text="Name" />
         <TableColumn fx:id="product_quantity" prefWidth="64.79998779296875" text="Quantity" />
         <TableColumn fx:id="product_size" prefWidth="47.20001220703125" text="Size" />
         <TableColumn fx:id="product_price" prefWidth="77.60003662109375" text="Price" />
         <TableColumn fx:id="product_description" prefWidth="166.39999389648438" text="Descritpion" />
         <TableColumn fx:id="product_disponibility" prefWidth="84.800048828125" text="Disponibility" />
         <TableColumn fx:id="product_image" minWidth="1.5999755859375" prefWidth="110.39996337890625" text="Image" />
     </columns>
   </TableView>

    <Label fx:id="welcomeText" />
</VBox>
