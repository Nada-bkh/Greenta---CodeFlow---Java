<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.greenta.GUI.ProductCategoryController">
   <children>
      <VBox layoutX="32.0" layoutY="128.0" prefHeight="302.0" prefWidth="234.0" spacing="10.0">
         <children>
            <TextField fx:id="productcategoryname" promptText="Category name">
               <effect>
                  <DropShadow />
               </effect></TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product Category Image : ">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Button fx:id="upload" mnemonicParsing="false" onAction="#upload" prefHeight="26.0" prefWidth="92.0" text="Upload">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <ImageView fx:id="image" fitHeight="150.0" fitWidth="226.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
      <ButtonBar layoutX="242.0" layoutY="511.0" prefHeight="50.0" prefWidth="559.0">
         <buttons>
            <Button fx:id="addbutton" mnemonicParsing="false" onAction="#addbutton" prefHeight="48.0" prefWidth="453.0" text="Add" textFill="#119c34">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
            <Button fx:id="updatebutton" mnemonicParsing="false" onAction="#updatebutton" prefHeight="46.0" text="Update" textAlignment="CENTER" textFill="#0d1dd4">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
            <Button fx:id="deletebutton" layoutX="565.0" layoutY="10.0" mnemonicParsing="false" onAction="#deletebutton" prefHeight="50.0" text="Delete" textFill="#ea0e0e">
               <font>
                  <Font size="23.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
      <ListView fx:id="list1" layoutX="313.0" layoutY="212.0" prefHeight="279.0" prefWidth="458.0" />
      <ImageView fitHeight="46.0" fitWidth="49.0" layoutX="7.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/logo.png" />
         </image>
      </ImageView>
      <Button fx:id="asc" layoutX="646.0" layoutY="164.0" mnemonicParsing="false" onAction="#triasc" prefHeight="26.0" prefWidth="54.0" text="Asc" />
      <Button fx:id="desc" layoutX="705.0" layoutY="164.0" mnemonicParsing="false" onAction="#tridesc" prefHeight="26.0" prefWidth="54.0" text="Desc" />
      <TextField fx:id="searchField" layoutX="613.0" layoutY="115.0" prefHeight="26.0" prefWidth="136.0" promptText="Search by name">
         <effect>
            <DropShadow />
         </effect>
      </TextField>
      <Button fx:id="searchb" layoutX="332.0" layoutY="165.0" mnemonicParsing="false" onAction="#search" prefHeight="15.0" prefWidth="70.0" text="Search" />
      <Button fx:id="refresh" layoutX="408.0" layoutY="165.0" mnemonicParsing="false" onAction="#refresh" prefHeight="24.0" prefWidth="70.0" text="Refresh" />
      <Button fx:id="pdf" layoutX="586.0" layoutY="164.0" mnemonicParsing="false" onAction="#generatePDF" prefHeight="26.0" prefWidth="53.0" text="PDF" />
      <Button fx:id="retour" layoutX="577.0" layoutY="19.0" mnemonicParsing="false" onAction="#retour" prefHeight="35.0" prefWidth="104.0" text="Dashboard" />
      <HBox alignment="BOTTOM_LEFT" layoutX="15.0" layoutY="15.0" prefHeight="42.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="43.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../logo.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" prefHeight="43.0" prefWidth="140.0" text="Greenta" textFill="#076b00">
               <font>
                  <Font name="Edwardian Script ITC" size="26.0" />
               </font>
            </Label>
            <Separator maxHeight="-Infinity" orientation="VERTICAL" prefHeight="41.0" prefWidth="6.0" />
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="35.0" prefWidth="383.0" spacing="20.0">
               <children>
                  <TextField alignment="TOP_LEFT" prefHeight="26.0" prefWidth="185.0" promptText="Search" />
                  <ImageView fitHeight="20.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../1.png" />
                     </image>
                  </ImageView>
               </children>
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </HBox>
            <Pane prefHeight="42.0" prefWidth="107.0" styleClass="white-background" stylesheets="@css/Styles.css" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Button fx:id="profileLabel" layoutX="729.0" layoutY="22.0" mnemonicParsing="false" onAction="#profileClicked" prefHeight="29.0" prefWidth="57.0" textFill="#076b00" />
   </children>
</AnchorPane>
