<AnchorPane prefHeight="424.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.greenta.GUI.UserController">
   <children>
      <TextField fx:id="emailField" layoutX="379.0" layoutY="131.0" />
      <Label layoutX="300.0" layoutY="135.0" text="Email" />
      <Label layoutX="300.0" layoutY="192.0" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="379.0" layoutY="188.0" />
