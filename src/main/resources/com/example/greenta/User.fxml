         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <Label layoutX="383.0" layoutY="315.0" text="Forgot password?" />
      <Label fx:id="forgetPassword" layoutX="488.0" layoutY="315.0" onMouseClicked="#onForgetPasswordClick" text="Click here !" underline="true">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Label layoutX="351.0" layoutY="339.0" text="Don't have an account ?" />
      <Label fx:id="signUp" layoutX="487.0" layoutY="338.0" onMouseClicked="#onSighUpClick" text="Sign up here!" underline="true">
