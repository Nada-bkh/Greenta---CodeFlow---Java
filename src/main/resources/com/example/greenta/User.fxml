<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.greenta.GUI.UserController">
   <children>
      <TextField fx:id="emailField" layoutX="376.0" layoutY="154.0" />
      <Label layoutX="297.0" layoutY="158.0" text="Email" />
      <Label layoutX="297.0" layoutY="215.0" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="376.0" layoutY="211.0" />
      <Button fx:id="loginButton" layoutX="428.0" layoutY="257.0" mnemonicParsing="false" onAction="#onLoginClick" text="Login" />
      <Label layoutX="366.0" layoutY="57.0" text="GREENTA" textFill="#0f4000">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <Label layoutX="388.0" layoutY="296.0" text="Forgot password?" />
      <Label fx:id="forgetPassword" layoutX="493.0" layoutY="296.0" onMouseClicked="#onForgetPasswordClick" text="Click here !" underline="true">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Label layoutX="356.0" layoutY="320.0" text="Don't have an account ?" />
      <Label fx:id="signUp" layoutX="492.0" layoutY="319.0" onMouseClicked="#onSighUpClick" text="Sign up here!" underline="true">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <ImageView fitHeight="400.0" fitWidth="287.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/adc1d6fa7ba487608279606fee8b9b2b.jpg" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
