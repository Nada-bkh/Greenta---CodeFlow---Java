      <Label fx:id="forgetPassword" layoutX="300.0" layoutY="237.0" onMouseClicked="#returnClicked" text="Return" underline="true">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <ImageView fitHeight="476.0" fitWidth="275.0" layoutY="-20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../adc1d6fa7ba487608279606fee8b9b2b.jpg" />
         </image>
      </ImageView>
      <Label fx:id="InvalidCode" layoutX="332.0" layoutY="202.0" prefHeight="15.0" prefWidth="150.0" textFill="RED">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
